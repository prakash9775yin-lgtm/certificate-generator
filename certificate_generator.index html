  <!-- Libraries from CDNs -->
  <script src="https://cdn.jsdelivr.net/npm/papaparse@5.4.1/papaparse.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/html2canvas@1.4.1/dist/html2canvas.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.7.1/jszip.min.js"></script>
  <script>
    const { jsPDF } = window.jspdf;
    const previewName = document.getElementById('previewName');
    const previewEvent = document.getElementById('previewEvent');
    const previewCertTitle = document.getElementById('previewCertTitle');
    const previewMessage = document.getElementById('previewMessage');
    const previewDate = document.getElementById('previewDate');
    const sigPreview = document.getElementById('sigPreview');

    document.getElementById('eventName').addEventListener('input', e=> previewEvent.textContent = e.target.value || 'Event / Program');
    document.getElementById('certTitle').addEventListener('input', e=> previewCertTitle.textContent = e.target.value || 'Participation Certificate');
    document.getElementById('message').addEventListener('input', e=> previewMessage.textContent = e.target.value || 'Message');
    document.getElementById('dateText').addEventListener('input', e=> previewDate.textContent = e.target.value || 'Date');

    document.getElementById('sigFile').addEventListener('change', async (e)=>{
      const f = e.target.files[0];
      if(!f) return; 
      const url = URL.createObjectURL(f);
      sigPreview.innerHTML = '<img src="'+url+'" alt="sig" />';
    });

    document.getElementById('previewBtn').addEventListener('click', ()=>{
      const n = document.getElementById('singleName').value.trim() || 'Participant Name';
      previewName.textContent = n;
      window.scrollTo({top:0,behavior:'smooth'});
    });

    async function renderCertificateToPdf(name){
      // set name in preview
      previewName.textContent = name;
      // small delay for image render
      await new Promise(r=>setTimeout(r,120));
      const el = document.getElementById('certificate');
      const canvas = await html2canvas(el, {scale:2});
      const imgData = canvas.toDataURL('image/png');
      // create pdf A4 landscape
      const pdf = new jsPDF({orientation:'landscape', unit:'pt', format:[842,595]});
      pdf.addImage(imgData,'PNG',0,0,842,595);
      return pdf;
    }

    document.getElementById('downloadSingle').addEventListener('click', async ()=>{
      const name = document.getElementById('singleName').value.trim();
      if(!name){alert('कृपया नाव टाका.'); return}
      const pdf = await renderCertificateToPdf(name);
      const safeName = name.replace(/[^a-z0-9\-_]/gi,'_');
      pdf.save(safeName+'_certificate.pdf');
    });

    document.getElementById('generateAll').addEventListener('click', async ()=>{
      const file = document.getElementById('csvFile').files[0];
      if(!file){alert('कृपया CSV फाईल अपलोड करा.'); return}
      const text = await file.text();
      const parsed = Papa.parse(text, {header:true, skipEmptyLines:true});
      const names = [];
      if(parsed.meta.fields && parsed.meta.fields.length>0){
        // if header present and first field likely name
        const key = parsed.meta.fields[0];
        for(const r of parsed.data){ if(r[key] && r[key].trim()) names.push(r[key].trim()); }
      } else {
        for(const r of parsed.data){ if(r[0] && r[0].trim()) names.push(r[0].trim()); }
      }
      if(names.length===0){alert('CSV मध्ये नावं सापडली नाहीत. कृपया पहिली column मध्ये नावं ठेवा.'); return}

      document.getElementById('generateAll').disabled = true; document.getElementById('generateAll').textContent='Generating...';
      const zip = new JSZip();
      for(let i=0;i<names.length;i++){
        const name = names[i];
        try{
          const pdf = await renderCertificateToPdf(name);
          const blob = pdf.output('blob');
          const safe = name.replace(/[^a-z0-9\-_]/gi,'_') || ('participant_'+(i+1));
          zip.file(safe+'_certificate.pdf', blob);
        } catch(e){ console.error('error for',name,e); }
      }
      const content = await zip.generateAsync({type:'blob'});
      const url = URL.createObjectURL(content);
      const a = document.createElement('a'); a.href=url; a.download='certificates.zip'; document.body.appendChild(a); a.click(); a.remove();
      document.getElementById('generateAll').disabled = false; document.getElementById('generateAll').textContent='Generate all PDFs and download ZIP';
    });

  </script>
</body>
</html>
